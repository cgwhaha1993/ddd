.g_main_right{min-width: 980px;width: 980px;margin:0 auto;}
.g_m_r_inner{float: right;}
.g_m_r_inner .g_g{display:block;}
.nav_menu ul.nav_menu_one{box-shadow: none;}

.g_goods{width: 755px;padding: 5px 7px 0 8px;background-color: #EFEFEF;}
.g_goods>a{float: left;width: 145px;height: 130px;border:1px solid #fff;background-color: #fff;margin:0 5px 6px 0;position: relative;overflow:hidden;color:#62626A;}
.g_goods>a:nth-child(5n){margin-right: 0;}
.g_goods>a i{font-size: 70px;display:block;text-align: center;position:relative;}
.g_goods>a i .g_mask_img{position:absolute;top:0;left:0;width: 100%;height: 100%;background-color: #fff;opacity: .6;}
.g_goods>a .g_mes{position:absolute;left: 0;bottom:-35px;padding: 3px;transition:bottom linear .6s;width: 100%;}
.g_goods .g_mes h3{height: 18px;line-height: 18px;font-size: 14px;}
.g_goods .g_mes p{height: 16px;line-height: 16px;font-size: 12px;color:#fff;}
.g_goods>a:hover{border-color: #404040;}
.g_goods>a:hover i .g_mask_img{display:none;}
.g_goods>a:hover .g_mes{bottom:0;background-color: #404040;}
.g_goods>a:hover .g_mes h3{color:#E08C11;}

